<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/StylePlox"
    tools:context=".Colors"
    android:id="@+id/rl">

    <TextView
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To:"
        android:id="@+id/to"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No emailTo"
        android:id="@+id/emailTo"
        android:layout_alignBaseline="@+id/to"
        android:layout_alignBottom="@+id/emailFrom"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From:"
        android:id="@+id/from"
        android:layout_below="@+id/to"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No emailFrom"
        android:id="@+id/emailFrom"
        android:layout_alignTop="@+id/from"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Subject:"
        android:id="@+id/subject"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No emailSubject"
        android:id="@+id/emailSubject"
        android:layout_alignTop="@+id/subject"
        android:layout_alignEnd="@+id/emailFrom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message:"
        android:id="@+id/message"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/subject"
        android:layout_alignParentStart="true" />

    <TextView
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Message"
        android:id="@+id/emailMessage"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
