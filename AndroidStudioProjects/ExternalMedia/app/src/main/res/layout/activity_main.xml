<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play1"
        android:id="@+id/play1"
        android:onClick="playResource"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause1"
        android:id="@+id/pause1"
        android:onClick="pauseResource"
        android:layout_alignTop="@+id/pause2"
        android:layout_alignStart="@+id/play1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play2"
        android:id="@+id/play2"
        android:onClick="playInternal"
        android:layout_alignTop="@+id/play1"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause2"
        android:id="@+id/pause2"
        android:onClick="pauseInternal"
        android:layout_below="@+id/play2"
        android:layout_alignStart="@+id/play2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Resource"
        android:id="@+id/resource"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/internal"
        android:layout_alignStart="@+id/pause1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Internal"
        android:id="@+id/internal"
        android:layout_marginRight="40dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/pause2"
        android:layout_alignStart="@+id/pause2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2 Chainz Soundboard"
        android:id="@+id/textView"
        android:textColor="#FF0000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fork"
        android:id="@+id/fork"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/play2"
        android:layout_alignEnd="@+id/resource" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthday Song"
        android:id="@+id/birthday"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/fork"
        android:layout_alignStart="@+id/play2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play3"
        android:id="@+id/play3"
        android:onClick="playNetwork"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/resource"
        android:layout_alignStart="@+id/resource" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause3"
        android:id="@+id/pause3"
        android:onClick="pauseNetwork"
        android:layout_below="@+id/play3"
        android:layout_alignStart="@+id/play3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Network"
        android:id="@+id/network"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/pause3"
        android:layout_alignStart="@+id/pause3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Crack"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/play3"
        android:layout_toStartOf="@+id/play3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play4"
        android:id="@+id/play4"
        android:onClick="playWilhelm"
        android:layout_alignTop="@+id/play3"
        android:layout_alignStart="@+id/internal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause4"
        android:id="@+id/pause4"
        android:onClick="pauseWilhelm"
        android:layout_below="@+id/play4"
        android:layout_alignStart="@+id/play4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Internal"
        android:id="@+id/wilhelm"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/pause4"
        android:layout_alignStart="@+id/pause4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wilhelm"
        android:id="@+id/wil"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/play4"
        android:layout_toEndOf="@+id/internal" />

</RelativeLayout>
